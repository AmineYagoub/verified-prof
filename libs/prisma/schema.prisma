generator client {
  provider = "prisma-client-js"
  output   = "./src/generated"
}

datasource db {
  provider = "postgresql"
}

enum ProviderType {
  GITHUB
  GITLAB
  BITBUCKET
}

enum SyncStatus {
  ACTIVE
  SYNCING
  ERROR
  DISABLED
  RATE_LIMITED
}

enum SeniorityRank {
  Junior
  Mid
  Senior
  Staff
  Principal
}

enum Trend {
  IMPROVING
  STABLE
  DECLINING
}

enum LearningCurveTrend {
  Exponential
  Steady
  Specialist
}

enum MissionImpact {
  Infrastructure
  Feature
  Refactor
  Fix
}

enum MentorshipType {
  GIVEN
  RECEIVED
}

enum TechCategory {
  DATABASE
  ORM_ODM
  BACKEND_FRAMEWORK
  FRONTEND_FRAMEWORK
  BUILD_TOOL
  CI_CD
  CLOUD_SERVICE
  CONTAINER_ORCHESTRATION
  TESTING_FRAMEWORK
  LANGUAGE_RUNTIME
  API_CLIENT
  STATE_MANAGEMENT
  AUTHENTICATION
  MONITORING
  MESSAGE_QUEUE
}

enum MasteryLevel {
  MENTIONED
  USED
  PROFICIENT
  EXPERT
}

enum JobStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum JobStage {
  FETCHING_COMMITS
  ANALYZING_COMMITS
  PERSISTING_DATA
  GENERATING_MISSIONS
  AI_ANALYSIS
  TECH_STACK_DNA
  TECH_DETECTION
  ARCHITECTURE_LAYER
  EFFORT_DISTRIBUTION
}

model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  emailVerified Boolean  @default(false)
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts             Account[]
  sessions             Session[]
  providerConnections  ProviderConnection[]
  analysisTagSummaries AnalysisTagSummary[]
  userProfile          UserProfile?
  twinConversations    TwinConversation[]
  jobTrackings         JobTracking[]
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

model ProviderConnection {
  id     String @id @default(cuid())
  userId String

  provider       ProviderType
  username       String
  providerUserId String?

  isConnected  Boolean    @default(true)
  lastSyncedAt DateTime?
  syncStatus   SyncStatus @default(ACTIVE)

  scopes String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

model AnalysisTagSummary {
  id           String   @id @default(cuid())
  repoFullName String
  commitSha    String
  filePath     String
  contentHash  String
  userId       String?
  tagSummary   Json
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([repoFullName, commitSha, filePath])
  @@index([contentHash])
  @@index([userId, createdAt])
}

model UserProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slug           String?   @unique
  bio            String?   @db.Text
  lastAnalyzedAt DateTime?
  lastCommitSha  String?

  coreMetrics      CoreMetrics?
  techStackDNA     TechStackDNA?

  weeklyIntensities    WeeklyIntensity[]
  languageExpertises   LanguageExpertise[]
  missions             Mission[]
  architecturalLayers  ArchitecturalLayer[]
  effortDistributions  EffortDistribution[]
  technologyStack      TechnologyStack[]
}

model JobTracking {
  id         String     @id @default(cuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  status         JobStatus  @default(QUEUED)
  currentStage   JobStage?
  progress       Int        @default(0)

  startedAt   DateTime @default(now())
  completedAt DateTime?
  error       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
  @@index([userId, createdAt])
}

model CoreMetrics {
  id            String      @id @default(cuid())
  userProfileId String      @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  codeImpact              Int
  cycleTime               Float
  logicDensity            Float
  systemComplexityScore   Float
  velocityPercentile      Float
  seniorityRank           SeniorityRank
  specialization          String
  sTierVerificationHash   String
  trend                   Trend?
  periodStart             DateTime?
  periodEnd               DateTime?
}

model TechStackDNA {
  id            String      @id @default(cuid())
  userProfileId String      @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  learningCurveTrend LearningCurveTrend
  dominantLanguages  String[]
}

model LanguageExpertise {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  name              String
  expertise         Float
  daysToMastery     Int
  topLibraryPatterns String[]
  firstSeen         DateTime
  lastUsed          DateTime
  weeksActive       Int

  @@unique([userProfileId, name])
  @@index([userProfileId, expertise])
}

model WeeklyIntensity {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  week            String
  language        String
  intensity       Float
  complexityScore Float
  linesWritten    Int
  filesModified   Int

  @@unique([userProfileId, week, language])
  @@index([userProfileId, week])
}

model Mission {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  date              DateTime
  impact            MissionImpact
  title             String
  architecturalFeat String?      @db.Text
  summary           String       @db.Text
  achievements      String[]
  patterns          String[]     @default([])
  domainContext     String
  commitCount       Int
  isHeroMission     Boolean      @default(false)

  @@index([userProfileId, date])
  @@index([userProfileId, isHeroMission])
}

model ArchitecturalLayer {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  layer          String
  description    String      @db.Text
  fileCount      Int
  stabilityRate  Int
  involvement    Int
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@unique([userProfileId, layer])
  @@index([userProfileId, createdAt])
}

model EffortDistribution {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  weekStart       String
  features        Int
  fixes           Int
  refactors       Int
  tests           Int
  documentation   Int
  infrastructure  Int
  performance     Int
  security        Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@unique([userProfileId, weekStart])
  @@index([userProfileId, weekStart])
}

model TwinConversation {
  id           String   @id @default(cuid())
  userId       String
  transcript   String   @db.Text
  duration     Int
  startedAt    DateTime @default(now())
  endedAt      DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model TechnologyStack {
  id            String      @id @default(cuid())
  userProfileId String
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  category            TechCategory
  name                String
  version             String?
  masteryLevel        MasteryLevel
  implementationScore Int
  usageCount          Int
  totalDays           Int
  weeksActive         Int
  firstSeen           DateTime
  lastUsed            DateTime

  evidenceTypes   String[]
  codePatterns    String[]
  configFiles     String[]
  projectContexts String[]
  relatedTechs    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userProfileId, category, name])
  @@index([userProfileId, masteryLevel])
  @@index([userProfileId, category])
}


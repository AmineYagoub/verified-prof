enum AssessmentType {
  AI_INITIAL
  AI_PERIODIC
  HUMAN_PEER
  HUMAN_EXPERT
  HUMAN_SELF
  AUTOMATED_TEST
}

// Verification and Claims
enum ClaimType {
  SKILL_LANGUAGE
  SKILL_FRAMEWORK
  SKILL_DATABASE
  ROLE_FULL_STACK
  ROLE_FRONTEND
  ROLE_BACKEND
  ROLE_DEVOPS
  EXPERIENCE_SENIOR
  EXPERIENCE_LEAD
  EXPERIENCE_ARCHITECT
  ACHIEVEMENT_OSS
  ACHIEVEMENT_MENTOR

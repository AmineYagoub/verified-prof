enum SyncStatus {
  ACTIVE
  SYNCING
  ERROR
  DISABLED
  RATE_LIMITED
}

enum TriggerType {
  MANUAL
  SCHEDULED
  WEBHOOK
  ADMIN
  SYSTEM
}


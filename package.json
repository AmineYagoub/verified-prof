{
  "name": "verified-prof",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rimraf .next && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:mig": "npx wrangler d1 migrations create verified-prof",
    "db:apply": "npx wrangler d1 migrations apply verified-prof --remote",
    "db:gen": "prisma generate"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@opennextjs/cloudflare": "^1.14.9",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/adapter-d1": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "better-auth": "^1.4.16",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "next": "16.1.3",
    "octokit": "^5.0.5",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.16",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "daisyui": "^5.5.1-beta.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "prisma": "^7.2.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "wrangler": "^4.59.2"
  }
}

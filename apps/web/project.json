{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "outputs": [
        "{projectRoot}/.next/*.json",
        "{projectRoot}/.next/!(cache|standalone)/**"
      ],
      "options": {
        "assets": [
          "apps/web/public",
          {
            "input": "libs/ui/src/i18n",
            "glob": "**/*.json",
            "output": "public/locales"
          }
        ]
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "web:build",
        "dev": true
      }
    }
  }
}

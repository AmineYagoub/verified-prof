# =============================================================================
# Verified Prof - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# For production, these should be set via Cloud Run environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Local: postgresql://verified_prof:verified_prof_password@localhost:5432/verified_prof
# Cloud SQL: postgresql://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=postgresql://user:password@host:5432/database

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4200
NEXT_PUBLIC_WORKER_SERVICE_URL=http://localhost:4200

# -----------------------------------------------------------------------------
# Better Auth Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=change-me-to-a-secure-random-string

# Base URL for auth callbacks (should match NEXT_PUBLIC_APP_URL in production)
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
# Create OAuth App at: https://github.com/settings/developers
# Homepage URL: http://localhost:3000
# Callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# -----------------------------------------------------------------------------
# Google Cloud / AI Studio
# -----------------------------------------------------------------------------
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_BUCKET_NAME=your-storage-bucket-name
GOOGLE_PROJECT_REGION=us-central1

# Get API key from: https://aistudio.google.com/apikey
GOOGLE_AI_STUDIO_API_KEY=your-ai-studio-api-key

# Path to service account credentials (local development only)
# DO NOT use this in production - use Workload Identity instead
GOOGLE_APPLICATION_CREDENTIALS=./path/to/credentials.json
